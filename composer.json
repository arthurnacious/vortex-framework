{
    "name": "hyperdrive/framework",
    "type": "library", 
    "require": {
        "php": "^8.2",
        "psr/container": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Hyperdrive\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4"
    },
    "suggest": {
        "openswoole/core": "For high-performance coroutines"
    },
    "scripts": {
        "test": "phpunit tests/",
        "dev": "bin/hyperdrive serve --host=0.0.0.0 --port=8000",
        "start": "bin/hyperdrive serve --host=0.0.0.0 --port=8000 --env=production"
    }
}
